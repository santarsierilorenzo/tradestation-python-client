{
  "name": "${localWorkspaceFolderBasename}",

  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "options": [
      "--tag",
      "${localWorkspaceFolderBasename}:latest"
    ]
  },

  "runArgs": [
    "--name",
    "${localWorkspaceFolderBasename}"
  ],

  "mounts": [
    "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind"
  ],

  "workspaceFolder": "/${localWorkspaceFolderBasename}",
  "remoteUser": "myuser",

  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens@17.0.1",
        "PKief.material-icon-theme@5.27.0",
        "ms-python.python@2025.16.0",
        "ms-python.vscode-pylance@2025.8.3",
        "ms-toolsai.jupyter@2025.3.0",
        "ms-toolsai.jupyter-keymap@1.1.2",
        "ms-toolsai.jupyter-renderers@1.3.0"
      ]
    }
  },

  "containerEnv": {
    "PYTHONPATH": "/${localWorkspaceFolderBasename}"
  },

  "postCreateCommand": "./setup.sh"
}
